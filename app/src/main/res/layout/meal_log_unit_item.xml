<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/universal_item_background">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_select_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bird"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="item"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/meal_track_unit_item_text_padding"
            android:paddingTop="@dimen/meal_track_unit_item_text_padding"
            android:paddingBottom="@dimen/meal_track_unit_item_text_padding" />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_below="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingLeft="@dimen/item_text_left_right_padding"
        android:paddingRight="@dimen/item_text_left_right_padding"
        android:background="@color/meal_adapter_separator" />
</RelativeLayout>