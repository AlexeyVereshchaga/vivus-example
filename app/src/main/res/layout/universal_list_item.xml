<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/universal_item_background">

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_delete"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="@dimen/item_text_left_right_padding"
            android:paddingRight="@dimen/item_text_left_right_padding"
            android:textColor="@android:color/black"
            android:text="@string/meal_adapter_row1_txt_stub" />

        <TextView
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:paddingLeft="@dimen/item_text_left_right_padding"
            android:paddingRight="@dimen/item_text_left_right_padding"
            android:textColor="@color/food_tracker_row2_text"
            android:visibility="gone" />

        <TextView
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingLeft="@dimen/item_text_left_right_padding"
            android:paddingRight="@dimen/item_text_left_right_padding"
            android:paddingBottom="10dp"
            android:textColor="@color/meal_adapter_row3_txt_color"
            android:text="@string/meal_adapter_row3_txt_stub" />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_below="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingLeft="@dimen/item_text_left_right_padding"
        android:paddingRight="@dimen/item_text_left_right_padding"
        android:background="@color/meal_adapter_separator" />
</RelativeLayout>