<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_dialog_title"
            android:textSize="22sp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textColor="#2a75bb" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3d3d3d" />

        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_margin="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/confirm_dialog_separator_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/confirm_dialog_ll_btns_bg">

            <Button
                android:id="@+id/btn_close"
                android:background="@drawable/confirm_dialog_btn_selector"
                android:layout_weight="1"
                android:text="@string/confirm_dialog_btn_close"
                android:padding="5dp"
                android:textSize="20sp"
                android:textColor="@color/confirm_dialog_btn_close"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@color/confirm_dialog_separator_color" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:background="@drawable/confirm_dialog_btn_selector"
                android:layout_weight="1"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="@color/confirm_dialog_btn_close"
                android:text="@string/confirm_dialog_btn_delete"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>