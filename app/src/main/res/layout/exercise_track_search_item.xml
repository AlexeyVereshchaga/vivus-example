<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/universal_item_background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_delete"
        android:orientation="vertical">

        <TextView
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="@dimen/item_text_left_right_padding"
            android:paddingRight="@dimen/item_text_left_right_padding"
            android:layout_marginTop="@dimen/exercise_track_top_bottom_margin"
            android:layout_marginBottom="@dimen/exercise_track_top_bottom_margin"
            android:textColor="@android:color/black"
            android:text="@string/meal_adapter_row1_txt_stub" />
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_below="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:paddingLeft="@dimen/item_text_left_right_padding"
        android:paddingRight="@dimen/item_text_left_right_padding"
        android:background="@color/meal_adapter_separator" />
</RelativeLayout>