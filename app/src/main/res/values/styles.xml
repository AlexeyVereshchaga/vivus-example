<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="EditTextEditableStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/exercise_border_bottom_right</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextNotEditableStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/exercise_border_bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:editable">false</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditTextFoodTrackNotEditableStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/food_tracker_unit_text</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:editable">false</item>
        <item name="android:background">@drawable/food_tracker_border_bottom_right</item>
        <item name="android:textSize">@dimen/meal_log_add_edit_text</item>
    </style>

    <style name="EditTextFoodTrackEditableStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">@dimen/meal_log_add_edit_padding</item>
        <item name="android:paddingTop">@dimen/meal_log_add_edit_padding</item>
        <item name="android:paddingRight">@dimen/meal_log_add_edit_padding</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/food_tracker_border_bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:editable">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/meal_log_add_edit_text</item>
    </style>

    <style name="TextViewFoodTrackStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/food_tracker_unit_text</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/food_tracker_border_bottom_right</item>
        <item name="android:textSize">@dimen/meal_log_add_edit_text</item>
    </style>

    <style name="TextViewFoodTrackEditableStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">@dimen/meal_log_add_edit_padding</item>
        <item name="android:paddingTop">@dimen/meal_log_add_edit_padding</item>
        <item name="android:paddingRight">@dimen/meal_log_add_edit_padding</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@drawable/food_tracker_border_bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/meal_log_add_edit_text</item>
    </style>

    <style name="alert_login_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowMinWidthMajor">100%p</item>
        <item name="android:windowMinWidthMinor">100%p</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="progress_bar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDrawable">@drawable/anim_progress</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>


